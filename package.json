{
  "name": "roomi",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Christian Todd <christian.todd7@gmail.com> (https://www.chrstntdd.com/)",
  "license": "MIT",
  "scripts": {
    "test": "./node_modules/.bin/jest --coverage",
    "test-auto": "./node_modules/.bin/jest --watch",
    "test-fast": "./node_modules/.bin/jest --silent",
    "test:debug": "node --cross-envinspect-brk ./node_modules/.bin/jest --runInBand --watch",
    "start:server": "cross-env NODE_ENV=development node fuse.js server-dev",
    "start": "cross-env NODE_ENV=development node fuse.js dev",
    "build": "cross-env NODE_ENV=production node fuse.js prod",
    "test-prod": " rm -rf .fusebox/ && cross-env NODE_ENV=production node fuse.js test-prod"
  },
  "dependencies": {
    "autoprefixer": "^9.0.1",
    "bcrypt": "^3.0.0",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "consolidate": "^0.15.1",
    "dotenv": "^6.0.0",
    "express-graphql": "^0.6.12",
    "folktale": "^2.1.0",
    "fuse-box": "^3.4.0",
    "graphql": "^0.13.2",
    "graphql-import": "^0.6.0",
    "graphql-tools": "^3.1.1",
    "helmet": "^3.13.0",
    "html-minifier": "^3.5.19",
    "isomorphic-unfetch": "^2.1.1",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^5.2.6",
    "morgan": "^1.9.0",
    "node-sass": "^4.9.3",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "sanitizer": "^0.1.3",
    "tslib": "^1.9.3",
    "typescript": "^3.0.1",
    "unistore": "^3.0.6",
    "workbox-build": "^3.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.55",
    "@types/express": "^4.16.0",
    "@types/graphql": "^0.13.4",
    "@types/jest": "^23.3.1",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/mongoose": "^5.2.4",
    "@types/node": "^10.5.6",
    "@types/react": "^16.4.7",
    "@types/react-dom": "^16.0.6",
    "@types/sanitizer": "^0.0.28",
    "babel-jest": "^23.4.2",
    "babel-plugin-dynamic-import-node": "^2.0.0",
    "cross-env": "^5.2.0",
    "jest": "^23.4.2",
    "jest-dom": "^1.11.0",
    "jest-watch-typeahead": "^0.2.0",
    "postcss-modules": "^1.3.0",
    "prettier": "^1.14.0",
    "react-testing-library": "^4.1.5",
    "ts-jest": "^23.0.1",
    "uglify-es": "^3.3.9"
  },
  "jest": {
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,ts,tsx,jsx}"
    ],
    "coverageReporters": [
      "lcov"
    ],
    "coveragePathIgnorePatterns": [
      "\\.d\\.ts$"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](build|docs|node_modules|scripts)[/\\\\]",
      "\\.d\\.ts$"
    ],
    "testURL": "http://localhost:3000",
    "transform": {
      "^.+\\.(scss|css)$": "<rootDir>/config/testing/style-mock.js",
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/config/testing/file-mock.js",
      "^.+\\.(scss|css)$": "<rootDir>/config/testing/style-mock.js",
      "^@[/](.*)": "<rootDir>/src/client/$1"
    },
    "moduleDirectories": [
      "<rootDir>/src",
      "node_modules"
    ],
    "testRegex": "\\.spec\\.(js|ts|jsx|tsx)$",
    "globals": {
      "ts-jest": {
        "babelConfig": {
          "env": {
            "test": {
              "plugins": [
                "dynamic-import-node"
              ]
            }
          }
        }
      }
    }
  }
}
